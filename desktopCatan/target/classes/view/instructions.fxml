<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<StackPane xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="es.susangames.catan.controllers.Instructions">
   <children>
      <AnchorPane fx:id="anchorPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity">
         <children>
            <VBox>
               <children>
                  <AnchorPane style="-fx-background-color: #965d62; -fx-background-radius: 12px;" VBox.vgrow="ALWAYS">
                     <children>
                        <HBox>
                           <children>
                              <Region />
                              <Text fx:id="menuText" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" wrappingWidth="117.0">
                                 <font>
                                    <Font name="System Bold Italic" size="31.0" />
                                 </font>
                                 <HBox.margin>
                                    <Insets />
                                 </HBox.margin>
                              </Text>
                              <Region />
                              <Text fx:id="rulesInstructions" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" wrappingWidth="430.0">
                                 <font>
                                    <Font name="System Bold Italic" size="31.0" />
                                 </font>
                              </Text>
                              <Region />
                           </children>
                        </HBox>
                     </children>
                     <VBox.margin>
                        <Insets top="5.0" />
                     </VBox.margin>
                  </AnchorPane>
                  <Region>
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </Region>
                  <HBox VBox.vgrow="ALWAYS">
                     <children>
                        <VBox style="-fx-background-color: #665d64;" HBox.hgrow="ALWAYS">
                           <children>
                              <JFXButton fx:id="buttonBasics" onAction="#loadBasics" textAlignment="CENTER" textFill="WHITE" VBox.vgrow="ALWAYS">
                                 <font>
                                    <Font size="15.0" />
                                 </font>
                              </JFXButton>
                              <Region />
                              <JFXButton fx:id="buttonFigures" onAction="#loadFigures" textAlignment="CENTER" textFill="WHITE" VBox.vgrow="ALWAYS">
                                 <font>
                                    <Font size="15.0" />
                                 </font>
                              </JFXButton>
                              <Region />
                              <JFXButton fx:id="buttonDevelopment" onAction="#loadDevelopment" textAlignment="CENTER" textFill="WHITE" VBox.vgrow="ALWAYS">
                                 <font>
                                    <Font size="15.0" />
                                 </font>
                              </JFXButton>
                              <Region />
                           </children>
                        </VBox>
                        <ScrollPane HBox.hgrow="ALWAYS">
                           <content>
                              <AnchorPane fx:id="anchorContent" />
                           </content>
                        </ScrollPane>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </AnchorPane>
   </children>
</StackPane>
